  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Login</h1>

        <!-- LOGIN FORM -->
        <ng-form name="login" novalidate>
            <div class="form-group">
                <label>Email</label>
                <input type="text" ng-model="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" ng-model="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-md" ng-click="loginuser()" >Login</button>
            </div>
        </ng-form>

        <hr>

        <p>Need an account? <a ui-sref="signup">Signup</a></p>
        <p>Or go <a ui-sref="home">home</a>.</p>

    </div>

  </div>
